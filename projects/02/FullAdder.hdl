/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    // Put you code here:
	HalfAdder(a=a,b=b,sum=ab,carry=s0);
	HalfAdder(a=c,b=ab,sum=sum,carry=s1);
	Or(a=s0,b=s1,out=carry);
}